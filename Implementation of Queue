//Program to implement queue
#include<stdio.h>
#include<stdlib.h>
#define max 20
int queue[max];
int front=-1,rear=-1;
void insert();
int delete();
int isFull();
int isEmpty();
void display();
int main()
{
	printf("Enter 3 elements to push into queue\n");
	insert();
	insert();
	insert();
	printf("THE QUEUE IS:\n");
	display();
	printf("deletion of element undergoing\n");
	delete();
	printf("Remaining QUEUE is:\n");
	display();
	
}
void insert()
{
	int item;
	if(isfull())
	{
		printf("linear queue overflow!!\n");
		return;
	}
	else
	{
		printf("enter the value to insert:\n");
		scanf("%d",&item);
		if(rear==-1)
		{
			front++;
		}
		rear++;
		queue[rear]=item;
	}
		
}
int delete()
{
	int item;
	if(isEmpty())
	{
		printf("\nLinear queue is empty!");
		return;
	}
	item=queue[front];
	if(front==rear)
	{
		front=-1;
		rear=-1;
	}
	else
		front=front+1;
	return item;
}
